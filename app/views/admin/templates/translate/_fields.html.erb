<% translator.forms.each do |locale, form| %>

  <%# form.hidden_field :locale %>

  <li class="<%= "translation lang-#{locale}" %>" <%= "data-limit=#{limit}" if limit %> >

    <%= form.label :locale, "#{@item.class.human_attribute_name(attribute, locale: locale)} (#{locale})" %>

    <%= instance.field_type(form) %>

  </li>

<% end %>