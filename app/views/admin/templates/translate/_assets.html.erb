<% content_for :stylesheets do %>

  <%= stylesheet_link_tag "typus_translate/application" %>

<% end %>

<% content_for :javascripts do %>

  <%= javascript_include_tag  "typus_translate/application" %>

  <script>
    $(document).ready(function(){
      $('form.resource').typusTranslate({
        locales: <%= translator.locales_json %>,
        fallback: 'en'
      });
    });      
  </script>

<% end %>