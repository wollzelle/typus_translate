<% content_for :stylesheets do %>

  <%= stylesheet_link_tag "typus_translate/application" %>

<% end %>

<% content_for :javascripts do %>

  <%= javascript_include_tag  "typus_translate/application" %>

  <script>
    $(document).ready(function(){
      $('form[role=form]').typusTranslate({
        locales: <%= translator.locales_json %>,
        fallback: 'en'
      });
      $('li[data-limit]').typusTextLimit();
    });
  </script>

<% end %>